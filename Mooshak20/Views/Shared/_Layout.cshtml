<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Layout.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="my_navbar navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <div class="my_icon">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Mooshak++", "Index", "Home", new { area = "" }, new { @class = "my_icon navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <div class="dropdown">
                            <button class="Blue_button btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Courses
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><p>Vantar links hérna</p></li>
                            </ul>
                        </div>
                    </li>
                    <li><button class="Blue_button btn btn-primary">Assignments</button></li>
                    <li>
                        <div class="dropdown">
                            <button class="Blue_button btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Settings
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
